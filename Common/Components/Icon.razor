@using System.ComponentModel
@using Common.Enumerations
@using Common.Extensions
@inherits BaseComponent

@{
    _ = _builder.Add("common__icon");
    
    if (Content is not null)
    {
        <svg class=@_builder xmlns="http://www.w3.org/2000/svg" viewBox="0 -960 960 960">
            <path d=@Content.GetDescription() />
        </svg>
    }
}

@code {
    [Parameter, EditorRequired]
    public IconPath? Content { get; set; }
}
