@inherits BaseComponent

@{
    _ = _builder.Append("common__card");

    if (Title is null) _ = _builder.Append("top");
    
    if (Description is null && Action is null) _ = _builder.Append("bottom");
}

<div class=@_builder>
    @Title
    @Illustration
    @Description
    @Action
</div>

@code {
    [Parameter]
    public RenderFragment? Title { get; set; }
    [Parameter]
    public RenderFragment? Illustration { get; set; }
    [Parameter]
    public RenderFragment? Description { get; set; }
    [Parameter]
    public RenderFragment? Action { get; set; }
}
