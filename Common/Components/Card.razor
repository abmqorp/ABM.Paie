@inherits BaseComponent

<div class=@_builder>
    @Title
    @Illustration
    @Description
    @Action
</div>

@code {
    [Parameter]
    public RenderFragment? Title { get; set; }
    [Parameter]
    public RenderFragment? Illustration { get; set; }
    [Parameter]
    public RenderFragment? Description { get; set; }
    [Parameter]
    public RenderFragment? Action { get; set; }
    
    protected override void OnInitialized()
    {
        _ = _builder.Append("common-card");
        base.OnInitialized();
    }
}
