@inherits BaseComponent

<div class=@_builder>
    @Title
    @ImageTemplate
    @Description
    @LinkTemplate
</div>

@code {
    [Parameter]
    public RenderFragment? Title { get; set; }
    [Parameter]
    public RenderFragment? ImageTemplate { get; set; }
    [Parameter]
    public RenderFragment? Description { get; set; }
    [Parameter]
    public RenderFragment? LinkTemplate { get; set; }

    protected override void OnInitialized()
    {
        _ = _builder.Append("common__card");
        base.OnInitialized();

        if (Title is null) _ = _builder.Append("top");
        if (Description is null && LinkTemplate is null) _ = _builder.Append("bottom");
    }
}
