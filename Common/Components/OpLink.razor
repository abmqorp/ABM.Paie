@using Common.Enumerations
@using Common.Extensions
@inherits Op

<a class=@_builder aria-label=@Label
    style="--common-op-color:@(Color.ToVar());--common-op-font-size:@(FontSize.GetDescription());"
    href=@Url target=@(IsExternal ? "_blank" : null)>
    <Icon Content=StartIcon />
    <div class="common-op-content">
        @if (ChildContent is not null) @ChildContent
        else @Label
    </div>
    @if (IsExternal)
    {
        <Icon Content=IconPath.OpenInNew />
    }
</a>

@code {
    [Parameter, EditorRequired]
    public string Url { get; set; }
    [Parameter]
    public bool IsExternal { get; set; } = false;

    protected override void OnInitialized()
    {
        _ = _builder.Append("common-link");
        base.OnInitialized();
    }
}
