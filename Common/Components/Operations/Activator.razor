@using Common.Enumerations
@using Common.Extensions
@using Common.Models.Operations
@inherits BaseComponent

@{
    _ = _builder.Append("common__activator").Append(Model.Class); 
}

<div class=@_builder>
    <Icon Content=Model.StartIcon />
    @if (ChildContent is not null)
    {
        <span class="common__activator__content">@ChildContent</span>
    }
    <Icon Content=Model.EndIcon />
</div>

@code {
    [Parameter, EditorRequired]
    public ActivatorModel Model { get; set; }

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
