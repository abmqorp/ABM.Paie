@using Common.Enumerations
@using Common.Tools

@code {
    protected ClassBuilder _builder = new ClassBuilder();

    [Parameter]
    public string? Class { get; set; }
    [Parameter]
    public Color Color { get; set; } = default;
    [Parameter]
    public Size FontSize { get; set; } = default;

    protected override void OnInitialized()
    {
        _ = _builder.Append(Class);
        base.OnInitialized();
    }
}
