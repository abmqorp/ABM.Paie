				<b>ABM Paie</b>
			</MudText>
		</MudButton>
		<br />
		<MudButton Class="white-text" Variant="Variant.Text" Href="@($"/{nameof(AbmPaie)}/Organigramme")" Style="padding:0px 8px">
			<MudText>
				Organigramme
			</MudText>
		</MudButton>
		<br />
		<MudButton Class="white-text" Variant="Variant.Text" Href="@($"/{nameof(AbmPaie)}/Equipe")" Style="padding:0px 8px">
			<MudText>
				Équipe pédagogique
			</MudText>
		</MudButton>
		<br />
		<MudButton Class="white-text" Variant="Variant.Text" Href="@($"/{nameof(AbmPaie)}/Indicateurs")" Style="padding:0px 8px">
			<MudText>
				Les indicateurs formation
			</MudText>
		</MudButton>
		<br />
		<MudButton Class="white-text" Variant="Variant.Text" Href="@($"/{nameof(AbmPaie)}/Valeurs")" Style="padding:0px 8px">
			<MudText>
				Mes valeurs
			</MudText>
		</MudButton>
		<br />
		<MudButton Class="pink-text text-darken-4" Variant="Variant.Text" Href="@($"/{nameof(AbmPaie)}/Assistance")" Style="padding:0px 8px">
