    var quotes = new List<string[]>()
    {
        new[] { "Rien ne prédispose plus au conformisme que le manque de formation.", "Gustave Thibon" },
        new[] { "Le savoir est la seule matière qui s'accroit avec le partage.", "Socrate" },
