        new[] { "Un bon maçon ne rejette aucune pierre.", "Proverbe néerlandais" },
        new[] { "Le chemin du succès se bâtit sur une série d'échecs sans perdre son enthousiasme.", "Winston Churchill" },
        new[] { "La vérité de demain se nourrit de l'erreur d'hier.", "Antoine de Saint-Exupéry" },
        new[] { "Les chefs-d'œuvre ne sont jamais que des tentatives heureuses.", "George Sand" },
